.projects {
    background-color: medium-dark
}

.project {
	box-sizing: border-box;
    padding: 2.375rem 1.75rem 2.375rem 1rem;
    display: grid;
	grid-template-columns: 2rem auto;
	grid-template-columns: 2rem auto;
	column-gap: 1rem;
}

.project__icon {
	grid-column-start: 1;
	grid-row-start: 1;
}

.project__meta {
	grid-column-start: 2;
	grid-row-start: 1;
}

.project__description {
	grid-column-start: 2;
	grid-row-start: 2;
}


.project, .project__viewmore {
	width: 50%;
	transition-duration: 0.3s
    font-weight: initial

    &:hover {
        background-color: dark-dark;
    }

	@media (max-width: constrained-width) {
        width: auto;
    }
}

.project__name {
    display: inline-block;
    font-weight: bold;
    font-size: 1.3125rem;
    color: light-gray
    margin: 0 1rem 0 0
}

.project__language {
    display: inline-block;
    font-size: 0.875rem
    padding: 0.125rem 0.25rem
    border-radius: 0.125rem
    min-width: 1.5rem
    text-align: center
    color: dark-dark
    vertical-align: 5%
}

.project__language + .project__language {
    margin-left: 0.375rem
}

.u-language-csharp { background-color: language-csharp }
.u-language-go { background-color: language-go }
.u-language-js { background-color: language-js }
.u-language-python { background-color: language-python }

.project__description {
    color: subtitle-gray
    display: block;
    font-size: 1.125rem;
    line-height: 1.5rem;
    margin-top: 0.375rem;
}

.project__icon {
    width: 2rem
    height: auto
    position: absolute

    @media (max-width: constrained-width) {
        position: static
        float: left
        margin-right: 1rem
    }
}

.project__viewmore {
	box-sizing: border-box;
	display: flex;
	padding: 2rem 1rem;
  	justify-content: center;
  	align-items: center;
  	font-size: 1.5rem
  	color: white
  	// text-align: center
  	text-decoration: none

	&:hover {
		text-decoration: underline
  	}
}
