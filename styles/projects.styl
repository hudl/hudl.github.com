.projects {
    background-color: medium-dark
}

.project {
    @extend $constrain
    cursor: pointer

    @media (max-width: constrained-width) {
        mobile-padding()
        width: auto
    }
}

.project__name {
    display: inline-block;
    font-weight: bold;
    font-size: 1.3125rem;
    margin-right: 1rem
}

.project__language {
    display: inline-block;
    font-size: 0.875rem
    padding: 0.125rem 0.25rem
    border-radius: 0.125rem
    min-width: 1.5rem
    text-align: center
    color: dark-dark
    vertical-align: 5%
}

.project__language + .project__language {
    margin-left: 0.375rem
}

.u-language-csharp { background-color: language-csharp }
.u-language-go { background-color: language-go }
.u-language-js { background-color: language-js }
.u-language-python { background-color: language-python }

.project__description {
    color: subtitle-gray
    display: block;
    font-size: 1.125rem;
    line-height: 1.5rem;
    margin-top: 0.375rem;
}

.project__icon {
    width: 2rem
    height: auto
    position: absolute

    @media (max-width: constrained-width) {
        position: static
        float: left
        margin-right: 1rem
    }
}
.project__icon + .project__meta,
.project__icon + .project__meta + .project__description {
    margin-left: 3rem

    @media (max-width: constrained-width) {
        margin-left: 0
    }
}

.project__viewmore {
    view-more()
}
