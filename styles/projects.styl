.projects-wrapper {
    @extend $constrain
    margin-top: 2rem;
}

.project {
    box-sizing: border-box
    padding: 1rem
    padding-left: 0
    display: inline-block
    vertical-align: top
    width: constrained-width-partial
    min-height: 10rem
    border-right: solid 1px dark-dark
    border-bottom: solid 1px dark-dark
    cursor: pointer
    position: relative
}

.project:last-child {
    border-bottom: none;
}

.project-right {
    padding-left: 1rem
    padding-right: 0
    border-right: none
    margin-left: -0.25rem // Ensure the lines meet up
}

.project__name {
    display: inline-block;
    font-weight: bold;
    font-size: 1.3125rem;
    margin-right: 1rem
}

.project__language {
    display: inline-block;
    font-size: smaller
    padding: 0.25rem
    border-radius: 3px
    min-width: 1.5rem
    text-align: center
    color: dark-dark
}

.u-language-csharp { background-color: language-csharp }
.u-language-go { background-color: language-go }
.u-language-js { background-color: language-js }
.u-language-python { background-color: language-python }

.project__description {
    color: subtitle-gray
    display: block;
    font-size: 1.125rem;
    line-height: 1.5rem;
    margin-top: 0.375rem;
}

.project__icon {
    width: 2rem
    height: auto
    position: absolute
}
.project__icon + .project__meta,
.project__icon + .project__meta + .project__description {
    margin-left: 3rem
}
