.projects {
    background-color: medium-dark
}

.projects-wrapper {
    @extend $constrain

    @media (max-width: constrained-width) {
        margin-top: 1rem
    }
}

.project {
    box-sizing: border-box
    padding: 2.375rem 1.75rem 2.375rem 0
    display: inline-block
    vertical-align: top
    width: constrained-width-partial
    min-height: 12rem
    border-right: solid 1px dark-dark
    border-bottom: solid 1px dark-dark
    cursor: pointer
    position: relative

    @media (max-width: constrained-width) {
        mobile-padding()
        width: constrained-width-mobile
    }
}

.project:last-child, .project:nth-last-child(2) {
    border-bottom: none;
}

@media (max-width: constrained-width) {
    .project:nth-last-child(2) {
        border-bottom: solid 1px dark-dark
    }
}

.project-right {
    padding-left: 1.75rem
    padding-right: 0
    border-right: none
    margin-left: -0.25rem // Ensure the lines meet up

    @media (max-width: constrained-width) {
        mobile-padding()
    }
}

.project__name {
    display: inline-block;
    font-weight: bold;
    font-size: 1.3125rem;
    margin-right: 1rem
}

.project__language {
    display: inline-block;
    font-size: 0.875rem
    padding: 0.125rem 0.25rem
    border-radius: 0.125rem
    min-width: 1.5rem
    text-align: center
    color: dark-dark
    vertical-align: 5%
}

.project__language + .project__language {
    margin-left: 0.375rem
}

.u-language-csharp { background-color: language-csharp }
.u-language-go { background-color: language-go }
.u-language-js { background-color: language-js }
.u-language-python { background-color: language-python }

.project__description {
    color: subtitle-gray
    display: block;
    font-size: 1.125rem;
    line-height: 1.5rem;
    margin-top: 0.375rem;
}

.project__icon {
    width: 2rem
    height: auto
    position: absolute
}
.project__icon + .project__meta,
.project__icon + .project__meta + .project__description {
    margin-left: 3rem
}

.project__viewmore {
    display: block
    font-size: 1.5rem
    margin-top: 2.25rem
    color: white
    text-decoration: none
    &:hover {
        text-decoration: underline
    }

    @media (max-width: constrained-width) {
        margin-left: 1rem
        margin-top: 2.75rem
    }
}
