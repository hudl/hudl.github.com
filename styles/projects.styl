.projects {
    background-color: medium-dark
    display: table
    border-collapse: collapse
    width: 100%
}

.project-row {
    border-bottom: solid 1px dark-dark
    display: table-row
}

.project-row:last-child {
    border-bottom: none;
}

@media (max-width: constrained-width) {
    .project-row:last-child {
        border-bottom: solid 1px dark-dark
    }
}

.project {
    @extend $constrain
    position: relative

    @media (max-width: constrained-width) {
        mobile-padding()
        width: constrained-width-mobile
    }
}

.project-left,
.project-right {
    display: table-cell
    width: constrained-width-partial
    vertical-align: top
    min-height: 100%
    box-sizing: border-box
    padding: 2.375rem 1.75rem 2.375rem 0
}

.project-right {
    padding-left: 1.75rem
    border-left: solid 1px dark-dark
}

.project__name {
    display: inline-block;
    font-weight: bold;
    font-size: 1.3125rem;
    margin-right: 1rem
}

.project__language {
    display: inline-block;
    font-size: 0.875rem
    padding: 0.125rem 0.25rem
    border-radius: 0.125rem
    min-width: 1.5rem
    text-align: center
    color: dark-dark
    vertical-align: 5%
}

.project__language + .project__language {
    margin-left: 0.375rem
}

.u-language-csharp { background-color: language-csharp }
.u-language-go { background-color: language-go }
.u-language-js { background-color: language-js }
.u-language-python { background-color: language-python }

.project__description {
    color: subtitle-gray
    display: block;
    font-size: 1.125rem;
    line-height: 1.5rem;
    margin-top: 0.375rem;
}

.project__icon {
    width: 2rem
    height: auto
    position: absolute

    @media (max-width: constrained-width) {
        position: static
        float: left
        margin-right: 1rem
    }
}
.project__icon + .project__meta,
.project__icon + .project__meta + .project__description {
    margin-left: 3rem

    @media (max-width: constrained-width) {
        margin-left: 0
    }
}

.project__viewmore {
    display: block
    font-size: 1.5rem
    margin-top: 1rem
    color: white
    text-decoration: none
    &:hover {
        text-decoration: underline
    }

    @media (max-width: constrained-width) {
        margin-left: 1rem
        margin-top: 2.75rem
    }
}
