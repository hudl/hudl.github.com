/* Utility classes */

.u-dark-color {
    color: #1d2329;
}
.u-medium-dark-color {
    color: #38434f;
}
.u-light-dark-color {
    color: #4e5d6c;
}
.u-gray-light-color {
    color: #f5f5f5;
}
.u-subtitle-gray-color {
    color: #bcc0c3;
}

.u-dark-background {
    background-color: #1d2329;
}
.u-medium-dark-background {
    background-color: #38434f;
}
.u-light-dark-background {
    background-color: #4e5d6c;
}

.u-flexbox {
    display: -webkit-box;
    display: -moz-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
}

.u-constrain {
    width: 26.875rem;
    margin-left: auto;
    margin-right: auto;
}

/* Font support */
.wf-loading, .wf-inactive {
  opacity: 0;
}
.wf-active {
  opacity: 1;
}


.main-wrap {
    font-family: 'Open Sans', Helvetica, Arial, sans-serif;
    font-weight: 300;
}

.header {
    margin-top: 7rem;
}

.header__lead-image {
    display: block;
    margin-left: auto;
    margin-right: auto;
    max-width: 325px;
}

.header__title {
    display: block;
    font-family: 'Oswald', sans-serif;
    font-size: 2.625rem;
    font-weight: normal;
    letter-spacing: 0.21875rem;
    margin-top: 4.4375rem;
}

.header__sub-title {
    display: block;
    font-size: 1.3125rem;
    line-height: 1.75rem;
    margin-top: 0.875rem;
}

.list-header {
    display: block;
    font-size: 2rem;
    font-weight: bold;
}

.projects {
    margin-top: 4.125rem;
    padding-top: 2rem;
    padding-bottom: 2rem;
}

.project {
    margin-top: 1.75rem;
}

.project__name {
    display: block;
    font-weight: bold;
    font-size: 1.3125rem;
}

.project__description {
    display: block;
    font-size: 1.125rem;
    line-height: 1.5rem;
    margin-top: 0.375rem;
}
