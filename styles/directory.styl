// Colors.
dark-dark = #1d2329
medium-dark = #38434f
light-dark = #4e5d6c

light-gray = #f5f5f5
subtitle-gray = #bcc0c3

$flex {
    display: -webkit-box;
    display: -moz-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
}

$constrain {
    width: 26.875rem;
    margin-left: auto;
    margin-right: auto;
}

/* Font support */
.wf-loading, .wf-inactive {
  opacity: 0;
}
.wf-active {
  opacity: 1;
}

body {
    background: dark-dark
    color: light-gray
}

.main-wrap {
    font-family: 'Open Sans', Helvetica, Arial, sans-serif;
    font-weight: 300;
}

.header {
    @extend $constrain
    margin-top: 7rem;
}

.header__lead-image {
    display: block;
    margin-left: auto;
    margin-right: auto;
    max-width: 325px;
}

.header__title {
    display: block;
    font-family: 'Oswald', sans-serif;
    font-size: 2.625rem;
    font-weight: normal;
    letter-spacing: 0.21875rem;
    margin-top: 4.4375rem;
}

.header__sub-title {
    color: subtitle-gray
    display: block;
    font-size: 1.3125rem;
    line-height: 1.75rem;
    margin-top: 0.875rem;
}

.list-header {
    @extend $constrain
    color: dark-dark
    display: block;
    font-size: 2rem;
    font-weight: bold;
}

.projects {
    background-color: medium-dark
    margin-top: 4.125rem;
    padding-top: 2rem;
    padding-bottom: 2rem;
}

.project {
    @extend $constrain
    margin-top: 1.75rem;
}

.project__name {
    display: block;
    font-weight: bold;
    font-size: 1.3125rem;
}

.project__description {
    color: subtitle-gray
    display: block;
    font-size: 1.125rem;
    line-height: 1.5rem;
    margin-top: 0.375rem;
}
