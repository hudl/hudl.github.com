.twitter {
    background-color: medium-dark
}

.twitter-timeline {
    loaded-content()
}

.tweets {
    @extend $constrain
    mobile-padding-media()
}

.tweet {
    position: relative;
    font-size: 1rem
}

.tweet:last-child {
    margin-top: 2rem

    @media (max-width: constrained-width) {
        margin-top: 0;
    }
}

.tweet__icon {
    position: absolute;
    width: 2rem
    height: auto

    img {
        border-radius: 2px;
    }
}

.tweet__icon + .tweet__meta,
.tweet__icon + .tweet__meta + .tweet__content,
.tweet__icon + .tweet__meta + .tweet__content + .tweet__retweet {
    margin-left: 4rem
}

.tweet__meta {
    font-weight: bold
}

.tweet__retweet {
    margin-top: 0.375rem
    color: #A4A7AB
    font-size: 0.75rem
}

.tweet__retweet-icon {
    display: inline-block
    margin-right 6px
    vertical-align: middle
    position relative
    top -1px
    width 18px

    path {
        fill: #959CA3
    }
}

a.tweet-body-link {
    color: #bcc0c3;
    text-decoration: none;
}

a.tweet-body-link:hover, a.tweet_retweet-link:hover, 
.tweets-from-link:hover, a.twitter__handle:hover  {
    color: #f5f5f5;
}

a.tweet_retweet-link {
    color: #A4A7AB
    text-decoration: none;
}

a.tweet_retweet-link:hover {
    color: #f5f5f5;
}

.tweet__viewmore {
    view-more()
}

.twitter__handle {
    display: inline-block;
    padding-left: 0.25rem;
    font-weight 300;
    text-decoration: none;
    color: #999999;
}

.tweet__content {
    color: subtitle-gray
    margin-top: 0.25rem
}

.tweets-from-link {
    color: #959ca3;
    text-decoration: none;
}
