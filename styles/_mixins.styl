$flex {
    display: -webkit-box;
    display: -moz-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
}

constrained-width = 45.875rem
constrained-width-partial = 22.8rem

constrained-width-mobile = 100%;

$constrain {
    width: constrained-width;
    margin-left: auto;
    margin-right: auto;

    @media (max-width: constrained-width) {
        width: constrained-width-mobile
    }
}

mobile-padding() {
    padding-left: 1rem
    padding-right: 1rem
}

mobile-padding-media() {
    @media (max-width: constrained-width) {
      mobile-padding()
    }
}
