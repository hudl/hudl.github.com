.cta {
    background-color: medium-dark
    text-align: center
    padding-top: 1.3125rem
    padding-bottom: 1.3125rem

    @media (max-width: constrained-width) {
        font-size: 1.125rem
    }
}

.cta__title {
    font-size: 1.3125rem;
    font-weight: 300;
    margin: 0
}

.cta__link {
    color: hudl-orange
    text-decoration: none
    font-weight: 700
    &:hover {
        text-decoration: underline
    }
}
